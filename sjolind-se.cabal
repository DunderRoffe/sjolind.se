name:                sjolind-se
version:             0.1.0.0
license:             GPL-3
license-file:        LICENSE
author:              Viktor Sjölind
maintainer:          viktor@sjolind.se
copyright:           Viktor Sjölind (C) 2016
category:            Web
build-type:          Simple
cabal-version:       >=1.10

executable sjolind-se
    main-is:             Main.hs
    hs-source-dirs:      src
    default-language:    Haskell2010
    build-depends:
        base,
        scotty,
        scotty-cookie,
        wai-middleware-static,
        wai-extra,
        acid-state>=0.14,
        text,
        lens,
        cereal,
        mtl,
        transformers,
        safecopy,
        http-types,
        blaze-html,
        blaze-markup,
        http-client,
        http-client-tls,
        containers,
        markdown,
        data-default,
        bytestring>=0.10.6

test-suite quick
    type:                exitcode-stdio-1.0
    main-is:             TestMain.hs
    hs-source-dirs:      test, src
    default-language:    Haskell2010
    build-depends:
        base,
        blaze-markup,
        text,
        bytestring,
        containers,
        QuickCheck
